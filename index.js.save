var express = require('express');
var app = express(); // here I use the express() method, instead of the createServer()

app.get('/', function(req, res){
  res.send("Willkommen auf dem Dungeons & Dungeons Level Finder <a href='/list'> Das Gro√üe Archiv</a>");
});
app.get('/list', function(req,res){
res.send('List of Levels');
res.send('<table style="width:100%">');
var i;
res.send('<tr><th>ID</th><th>Name</th><th>Tags</th></tr>');

for(i=0; i <16;i++)
{
res.send('<tr><td>'+i+'</td><td>Ein Level</td><td>Dungeon</td></tr>');
}

res.send('</table>');
});
var server = app.listen(3000, function() {
  console.log('Listening on port %d', server.address().port);
});
